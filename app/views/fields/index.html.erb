<h1>
Fields
</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>subcategory</th>
      <th>field element</th>  
      <th>order</th>      
      <th>edit</th>
      <th>remove</th>
    </tr>
  </thead>
  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%=field.id%></td>
        <td><%=field.title%></td>
        <td><%=field.sub_category.name%></td>
        <td><%=field.field_element.element%></td>
        <td><%=field.order%></td>
        <td>          
          <%= link_to "edit",
                       edit_field_path(field) %>
        </td>
        <td>
          <%= link_to "delete",
                      field_path(field),
                      :method => :delete,
                      :data => { :confirm => "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <%= link_to "new", new_field_path %>
      </td>
    </tr>
  </tbody>
</table>