<h1>
Categories
</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>slug</th>
      <th>edit</th>
      <th>remove</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%=category.id%></td>
        <td><%=category.name%></td>
        <td><%=category.slug%></td>
        <td>          
          <%= link_to "edit",
                       edit_category_path(category) %>
        </td>
        <td>
          <%= link_to "delete",
                      category_path(category),
                      :method => :delete,
                      :data => { :confirm => "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <%= link_to "new", new_category_path %>
      </td>
    </tr>
  </tbody>
</table>